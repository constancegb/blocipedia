<br>
  <div class="row">

    <div class='col-md-3'>
      <br><button class='btn btn-default'><%= link_to "Back to wikis", wikis_path %></button>
    </div>

    <div class="col-md-6">
      <h1><%= @wiki.title %></h1>
      <p><%= @wiki.body %></p>
    </div>

    <% if current_user  %>
      <div class="col-md-3">
        <br>
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      </div>
    <% end %>

  </div>
