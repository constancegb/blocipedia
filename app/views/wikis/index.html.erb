<h1 class='container'>All Wikis</h1>

<% if current_user  %>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
  </div><br><br>
<% end %>

 <% @public_wikis.each do |wiki| %>
 <div class="media col-md-6">
   <div class="media-body">
     <h4 class="media-heading">
       <%= link_to wiki.title, wiki %>
     </h4>
   </div>
 </div>
 <% end %>

 <br>
 <% if current_user.premium? || current_user.admin? %>
   <% @private_wikis.each do |wiki| %>
     <div class="media col-md-6">
       <div class="media-body">
         <h4 class="media-heading">
           <% if wiki.user_id == current_user.id %> PRIVATE: <%= link_to wiki.title, wiki %><% end %>
         </h4>
       </div>
     </div>
   <% end %>
 <% end %>
